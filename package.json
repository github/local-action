{
  "name": "@github/local-action",
  "description": "Debug a local GitHub Action",
  "version": "0.1.5",
  "author": "Nick Alteen <ncalteen@github.com>",
  "private": false,
  "homepage": "https://github.com/github/local-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/github/local-action.git"
  },
  "bugs": {
    "url": "https://github.com/github/local-action/issues"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "bin": {
    "local-action": "src/index.ts"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "ci-test": "npx mocha",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "test": "c8 mocha",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage"
  },
  "license": "MIT",
  "mocha": {
    "require": "ts-node/register",
    "spec": [
      "__tests__/**/*.ts"
    ],
    "ignore": [
      "__tests__/fixtures/**/*"
    ]
  },
  "c8": {
    "all": true,
    "check-coverage": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "dist",
      "node_modules",
      "__tests__"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "instrument": true,
    "reporter": [
      "json-summary",
      "text",
      "lcov"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@octokit/core": "^5.0.2",
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.10.6",
    "@types/proxyquire": "^1.3.31",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "figlet": "^1.7.0",
    "js-yaml": "^4.1.0",
    "proxyquire": "^2.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vercel/ncc": "^0.38.1",
    "c8": "^8.0.1",
    "chai": "^5.0.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jsonc": "^2.11.2",
    "eslint-plugin-prettier": "^5.1.2",
    "make-coverage-badge": "^1.2.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.1",
    "prettier-eslint": "^16.2.0",
    "sinon": "^17.0.1"
  }
}
