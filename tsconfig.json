{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "target": "ES2022"
  },
  "include": ["src", "types"],
  "exclude": [
    "__fixtures__/core.ts",
    "__fixtures__/tsconfig-paths.ts",
    "__tests__",
    "coverage",
    "node_modules"
  ]
}
